
<div class="message">
<%=flash[:message] if flash[:message]%>
</div>

<h1>Start here!</h1>
<%=form_for(@user) do |f|%>
    <%=f.label :username%>
    <%=f.text_field :username%>
    <br><br>
    <%=f.label :password%>
    <%=f.password_field :password%>
    <br><br>
    <%=f.submit "sign up"%>
<%end%>

<style>
.message {
    color: green;
}
</style>

