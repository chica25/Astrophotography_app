<%=form_for @user do |f|%>
    <%=f.label :profile_image%>
    <%=f.text_field :profile_image%>
    <br><br>
    <%=f.label :bio%>
    <%=f.text_field :bio%>
    <br><br>
    <%=f.submit "Update profile"%> 
<%end%>
    <br><br>
    <%=button_to "Delete", user_path(@user), :method => :delete, data:{confirm: "Are you sure you want to delete your account?"}%>
 



  