<h2>Please Log in!</h2>

<%=form_for(@user) do |f|%>
    <%=f.label :username%>
    <%=f.text_field :username%>
    <br><br>
    <%=f.label :password%>
    <%=f.password_field :password%>
    <br><br>
    <%=f.submit 'Login'%> <%=button_to 'Login with Google', '/auth/google_oauth2'%>
<%end%> 

<style>
.flash-error {
    color: red;
}
</style>